<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <title>Liste des professeurs</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f4f6fa; }
        .container { max-width: 700px; margin: 40px auto; background: #fff; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); padding: 30px; }
        h1 { color: #2c3e50; text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 10px; border-bottom: 1px solid #ddd; text-align: left; }
        th { background: #3498db; color: #fff; }
        tr:hover { background: #f1f1f1; }
    </style>
</head>
<body>
<div class="container">
    <h1>Liste des professeurs</h1>
    <a href="/" style="display:inline-block;margin-bottom:20px;padding:8px 18px;background:#3498db;color:#fff;border-radius:6px;text-decoration:none;">&#8592; Retour à l'accueil</a>

    <!-- Barre de recherche -->
    <form id="searchFormProf" method="get" action="professeurs/search" style="margin-bottom:20px; text-align:right;">
        <input type="text" id="searchInputProf" name="q" placeholder="Rechercher un professeur..." style="padding:7px 10px; border-radius:4px; border:1px solid #ccc;" />
        <button type="submit" style="padding:7px 16px; border-radius:4px; background:#27ae60; color:#fff; border:none;">Rechercher</button>
    </form>
    <script>
        document.getElementById('searchFormProf').addEventListener('submit', function(e) {
            e.preventDefault();
            var value = document.getElementById('searchInputProf').value.trim();
            if(value) {
                window.location.href = 'professeurs/search' + encodeURIComponent(value);
            }
        });
    </script>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if professeurs is not empty %}
                {% for professeur in professeurs %}
                    <tr>
                        <td>{{ professeur.nom|default('')|e }}</td>
                        <td>
                            <a href="{{ path('etudiants_by_professeur', {id: professeur.id_professeur}) }}" style="background:#27ae60;padding:7px 14px;border-radius:5px;color:#fff;text-decoration:none;">Voir ses étudiants</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr><td colspan="2" style="text-align:center;">Aucun professeur trouvé.</td></tr>
            {% endif %}
        </tbody>
    </table>
</div>
</body>
</html>
