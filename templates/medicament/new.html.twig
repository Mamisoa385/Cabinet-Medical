{% extends 'base.html.twig' %}

{% block title %}Nouveau Médicament{% endblock %}

{% block body %}
<style>
    body {
        background: #f5f9ff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    header {
        background: #4a90e2;
        color: white;
        padding: 1.2rem 2rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .header-container h1 {
        font-size: 1.8rem;
        margin: 0;
    }

    /* Menu horizontal avec icônes au-dessus */
        nav {
            margin: 20px 0;
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        nav a {
            text-align: center;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: transform 0.2s, color 0.3s;
        }

        nav a:hover {
            transform: scale(1.05);
        }

        nav a .icon {
            display: block;
            font-size: 2.2rem;
            margin-bottom: 0.3rem;
        }

        nav a.active {
            color: #ffd700;
        }

    main {
        max-width: 700px;
        margin: 2rem auto;
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 12px rgba(74, 144, 226, 0.1);
    }

    h2 {
        color: #4a90e2;
        margin-bottom: 1.5rem;
    }

    .btn {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.6rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        background: #ccc;
        color: #333;
        transition: 0.2s ease;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>

<header>
    <div class="header-container">
        <h1>Gestion Cabinet Médical</h1>
        <nav>
            <a href="{{ path('app_home') }}">
                <span class="icon">🏠</span><span>Accueil</span>
            </a>
            <a href="#"><span class="icon">👩‍⚕️</span><span>Patients</span></a>
            <a href="#"><span class="icon">🩺</span><span>Médecins</span></a>
            <a href="{{ path('app_medicament_index') }}" class="active">
                <span class="icon">💊</span><span>Médicaments</span>
            </a>
            <a href="#"><span class="icon">📅</span><span>Rendez-vous</span></a>
            <a href="#"><span class="icon">📝</span><span>Ordonnances</span></a>
        </nav>
    </div>
</header>

<main>
    <h2>Insérer un nouveau médicament</h2>

    {{ include('medicament/_form.html.twig') }}

    <a href="{{ path('app_medicament_index') }}" class="btn">← Retour</a>
</main>
{% endblock %}
