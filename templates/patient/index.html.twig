{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        body {
            background: #f5f9ff;
            color: #333;
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        header {
            background: #4a90e2;
            color: white;
            padding: 1.5rem 2rem;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        header h1 {
            font-weight: 700;
            font-size: 2.2rem;
        }

        /* Menu horizontal avec ic√¥nes au-dessus */
        nav {
            margin: 20px 0;
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        nav a {
            text-align: center;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: transform 0.2s, color 0.3s;
        }

        nav a:hover {
            transform: scale(1.05);
        }

        nav a .icon {
            display: block;
            font-size: 2.2rem;
            margin-bottom: 0.3rem;
        }

        nav a.active {
            color: #ffd700;
        }

        main {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1rem;
            flex-grow: 1;
        }

        .summary-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
            box-shadow: 0 4px 8px rgba(74, 144, 226, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .summary-table thead {
            background-color: #4a90e2;
            color: white;
        }

        .summary-table th, .summary-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .summary-table tbody tr:hover {
            background-color: #f0f7ff;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: none;
            text-decoration: none;
            font-weight: 600;
            transition: background 0.3s, color 0.3s;
            display: inline-block;
            margin: 0.5rem 0;
        }

        .btn-sm {
            padding: 0.3rem 0.6rem;
            font-size: 0.9rem;
        }

        .header-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-container h1 {
            font-size: 1.8rem;
            margin: 0;
            flex-shrink: 0;
        }

        .header-container nav {
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        .btn-info { background: #17a2b8; color: white; }
        .btn-warning { background: #ffc107; color: black; }
        .btn-success { background: #28a745; color: white; }

        footer {
            text-align: center;
            padding: 1rem;
            color: #999;
            font-size: 0.9rem;
            margin-top: auto;
            background: #f0f4fb;
        }
    </style>
<header>
    <div class="header-container">
        <h1>Gestion Cabinet M√©dical</h1>
        <nav>
            <a href="{{ path('app_home') }}">
                <span class="icon">üè†</span><span>Accueil</span>
            </a>
            <a href="{{ path('app_patient_index') }}" class="active">
                <span class="icon">üë©‚Äç‚öïÔ∏è</span><span>Patients</span>
            </a>
            <a href="#"><span class="icon">ü©∫</span><span>M√©decins</span></a>
            <a href="{{ path('app_medicament_index') }}">
                <span class="icon">üíä</span><span>M√©dicaments</span>
            </a>
            <a href="#"><span class="icon">üìÖ</span><span>Rendez-vous</span></a>
            <a href="#"><span class="icon">üìù</span><span>Ordonnances</span></a>
        </nav>
    </div>
</header>
<main>
    <table class="summary-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_naissance</th>
                <th>Sexe</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ patient.sexe }}</td>
                <td>{{ patient.telephone }}</td>
                <td>{{ patient.email }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">Voir</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">Modifier</a>
